<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailedInfoRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_page_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.DarkOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_page_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/colorRed"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/dashboard_feature_details" />
    </com.google.android.material.appbar.AppBarLayout>

    <ExpandableListView
        android:id="@+id/elvFeatureDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/colorHintGrey"
        android:divider="@color/colorWhite"
        android:dividerHeight="@dimen/dimen_one_dp"
        android:groupIndicator="@null"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />
</LinearLayout>