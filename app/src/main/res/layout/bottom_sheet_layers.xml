<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

        <include
            android:id="@+id/includeDial0gHeader"
            layout="@layout/include_dialog_header" />

        <TextView
            android:id="@+id/txtNoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="@dimen/standard_spacing_medium"
            android:layout_marginBottom="@dimen/standard_spacing_large"
            android:layout_marginStart="@dimen/standard_spacing_medium"
            android:layout_marginEnd="@dimen/standard_spacing_medium"
            android:text="@string/dashboard_no_layers_available"
            android:visibility="visible"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/standard_text_size_medium" />


        <ExpandableListView
            android:id="@+id/expandableLayerListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            android:divider="@color/colorHintGrey"
            android:dividerHeight="@dimen/dimen_half_dp"
            android:childDivider="@color/colorTransparent"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            android:nestedScrollingEnabled="true" />


</LinearLayout>