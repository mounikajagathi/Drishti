<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <include
        android:id="@+id/includeDial0gHeader"
        layout="@layout/include_dialog_header" />

    <LinearLayout
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/standard_spacing_small">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dashboardMenuIcon"
            android:layout_width="@dimen/standard_icon_size_medium"
            android:layout_height="@dimen/standard_icon_size_medium"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/standard_spacing_medium"
            android:src="@drawable/ic_logout" />


        <TextView
            android:id="@+id/dashboardMenuTitleLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/standard_spacing_small"
            android:layout_marginEnd="@dimen/standard_spacing_small"
            android:background="@color/colorTransparent"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/dashboard_logout"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/standard_text_size_medium_x" />

    </LinearLayout>


</LinearLayout>