<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/standard_spacing_medium">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/standard_spacing_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/includeDial0gHeader"
                layout="@layout/include_dialog_header" />

            <EditText
                android:id="@+id/etLongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_spacing_medium"
                android:layout_marginStart="@dimen/standard_spacing_medium"
                android:layout_marginTop="@dimen/standard_spacing_medium"
                android:layout_marginEnd="@dimen/standard_spacing_medium"
                android:layout_marginBottom="@dimen/standard_spacing_small"
                android:background="@drawable/bg_editext_bordered"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/dashboard_longitude"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minHeight="@dimen/standard_edt_txt_height_small"
                android:padding="@dimen/standard_spacing_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/standard_text_size_medium"
                android:autofillHints="@string/dashboard_longitude" />

            <EditText
                android:id="@+id/etLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standard_spacing_medium"
                android:layout_marginTop="@dimen/standard_spacing_small"
                android:layout_marginEnd="@dimen/standard_spacing_medium"
                android:layout_marginBottom="@dimen/standard_spacing_medium"
                android:background="@drawable/bg_editext_bordered"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/dashboard_latitude"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:minHeight="@dimen/standard_edt_txt_height_small"
                android:padding="@dimen/standard_spacing_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/standard_text_size_medium"
                android:autofillHints="@string/dashboard_latitude" />


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/standard_spacing_small"
                android:layout_marginTop="@dimen/standard_spacing_small"
                android:layout_marginEnd="@dimen/standard_spacing_small"
                android:layout_marginBottom="@dimen/standard_spacing_medium"
                android:fontFamily="@font/roboto_medium"
                android:minHeight="@dimen/standard_button_size_large"
                android:paddingStart="@dimen/standard_spacing_large"
                android:paddingEnd="@dimen/standard_spacing_large"
                android:text="@string/dashboard_submit"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/standard_text_size_medium"
                app:backgroundTint="@color/colorRed" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
