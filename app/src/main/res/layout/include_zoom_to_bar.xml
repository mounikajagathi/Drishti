<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zoomToBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/dashboard_sketch_area_bar_height"
    android:visibility="gone">


    <TextView
        android:id="@+id/txtShowInfo"
        android:layout_width="0dp"
        android:layout_height="@dimen/dashboard_sketch_area_bar_height"
        android:background="@color/colorDarkBlue"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/dimen_one_dp"
        android:layout_marginBottom="@dimen/dimen_one_dp"
        android:layout_marginStart="@dimen/dimen_one_dp"
        android:layout_marginEnd="@dimen/dimen_half_dp"
        android:gravity="center"
        android:text="@string/dashboard_show_info"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/standard_text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtCloseInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCloseInfo"
        android:layout_width="0dp"
        android:layout_height="@dimen/dashboard_sketch_area_bar_height"
        android:layout_marginTop="@dimen/dimen_one_dp"
        android:layout_marginBottom="@dimen/dimen_one_dp"
        android:layout_marginStart="@dimen/dimen_half_dp"
        android:layout_marginEnd="@dimen/dimen_one_dp"
        android:background="@color/colorDarkBlue"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/dashboard_close_info"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/standard_text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtShowInfo"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>