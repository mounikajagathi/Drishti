<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_spacing_small"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/dashboardMenuRootLayout"
    android:foreground="@drawable/ripple_bg"
    app:cardBackgroundColor="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_spacing_small"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dashboardMenuIcon"
            android:layout_width="@dimen/standard_icon_size_mini"
            android:layout_height="@dimen/standard_icon_size_mini"
            android:src="@drawable/ic_opacity"
            android:layout_marginStart="@dimen/standard_spacing_small"
            android:layout_marginEnd="@dimen/standard_spacing_micro"
            android:layout_gravity="center_vertical"/>


        <TextView
            android:id="@+id/dashboardMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:layout_marginStart="@dimen/standard_spacing_micro"
            android:layout_marginEnd="@dimen/standard_spacing_small"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorBlack"
            android:text=""
            android:textSize="@dimen/standard_text_size_small_xxx" />

    </LinearLayout>


</androidx.cardview.widget.CardView>