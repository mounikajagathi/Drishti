<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutItemDetailedInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_one_dp">

        <TextView
            android:id="@+id/txtDetailedInfoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/standard_spacing_medium"
            android:paddingTop="@dimen/standard_spacing_medium"
            android:paddingEnd="@dimen/standard_spacing_small"
            android:paddingBottom="@dimen/standard_spacing_medium"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/standard_text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dividerDetailedInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dividerDetailedInfo"
            android:layout_width="@dimen/dimen_one_dp"
            android:layout_height="0dp"
            android:background="@color/colorHintGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDetailedInfoValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/standard_spacing_medium"
            android:paddingTop="@dimen/standard_spacing_medium"
            android:paddingEnd="@dimen/standard_spacing_small"
            android:paddingBottom="@dimen/standard_spacing_medium"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/standard_text_size_medium"
            app:layout_constraintBottom_toBottomOf="@id/dividerDetailedInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dividerDetailedInfo"
            app:layout_constraintTop_toTopOf="@id/dividerDetailedInfo" />


        <TextView
            android:id="@+id/txtDetailedInfoHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:textAllCaps="true"
            android:paddingStart="@dimen/standard_spacing_medium"
            android:paddingTop="@dimen/standard_spacing_medium"
            android:paddingEnd="@dimen/standard_spacing_small"
            android:paddingBottom="@dimen/standard_spacing_medium"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/standard_text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>