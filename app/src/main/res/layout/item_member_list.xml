<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buildingAssetsRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_spacing_small"
    android:background="@drawable/bg_stroke_grey">

    <TextView
        android:id="@+id/buildingAssetsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/removeItem"
        android:padding="@dimen/standard_spacing_medium"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/standard_text_size_medium" />

    <ImageView
        android:id="@+id/removeItem"
        android:layout_width="@dimen/standard_icon_size_huge"
        android:layout_height="@dimen/standard_icon_size_huge"
        android:background="@drawable/bg_stroke_white"
        android:backgroundTint="@color/colorRed"
        android:padding="@dimen/standard_spacing_small"
        android:layout_margin="@dimen/standard_spacing_small"
        android:src="@drawable/ic_zoom_out"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        app:tint="@color/colorRed" />


</RelativeLayout>