<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtOpacityLayerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_spacing_large"
        android:layout_marginEnd="@dimen/standard_spacing_medium"
        android:layout_marginTop="@dimen/standard_spacing_medium"
        android:layout_marginBottom="@dimen/standard_spacing_small"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorBlack"
        android:text=""
        android:textSize="@dimen/standard_text_size_medium" />

    <SeekBar
        android:id="@+id/seekbarOpacityLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/seek_bar_size_medium"
        android:minHeight="@dimen/seek_bar_size_medium"
        android:layout_marginStart="@dimen/standard_spacing_medium"
        android:layout_marginEnd="@dimen/standard_spacing_medium"
        android:layout_marginTop="@dimen/standard_spacing_small"
        android:layout_marginBottom="@dimen/standard_spacing_medium"
        android:max="100"
        android:progressDrawable="@drawable/opacity_seekbar_style"
        android:splitTrack="false"
        android:thumb="@drawable/opacity_seekbar_thumb"/>

</LinearLayout>